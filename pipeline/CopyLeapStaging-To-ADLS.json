{
	"name": "CopyLeapStaging-To-ADLS",
	"properties": {
		"activities": [
			{
				"name": "CopyLeapStaging-To-ADLS",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"wildcardFileName": "*.csv"
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						}
					},
					"enableStaging": false,
					"preserve": [
						"Attributes"
					],
					"dataIntegrationUnits": 2
				},
				"inputs": [
					{
						"referenceName": "LeapStorageSourceDataset",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ADLSDataset",
						"type": "DatasetReference",
						"parameters": {
							"folder": {
								"value": "@concat('/', formatDateTime(pipeline().TriggerTime, 'yyyy'), '/', formatDateTime(pipeline().TriggerTime, 'MM'), '/', formatDateTime(pipeline().TriggerTime, 'dd'), '/')",
								"type": "Expression"
							},
							"directory": "leap"
						}
					}
				]
			}
		],
		"folder": {
			"name": "Leap Data Pipeline"
		},
		"annotations": []
	}
}